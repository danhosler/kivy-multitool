RootWidget:

<RootWidget>:
    tab_panel:
    NavigationLayout:
        id: nav_layout
        MDNavigationDrawer:
            id: nav_drawer
            NavigationDrawerToolbar:
                title: "Navigation Drawer"
            NavigationDrawerIconButton:
                use_active: False
                icon: 'checkbox-blank-circle'
                text: "Exit"
                on_release: app.stop()
        BoxLayout:
            id: box_layout
            orientation: 'vertical'
            Toolbar:
                id: toolbar
                title: 'MultiTool'
                md_bg_color: app.theme_cls.primary_color
                background_palette: 'Primary'
                background_hue: '500'
                left_action_items: [['menu', lambda x: app.root.ids.nav_layout.toggle_nav_drawer()]]
                right_action_items: [['dots-vertical', lambda x: app.root.ids.tab_panel.previous_tab.ids.nav_layout.toggle_nav_drawer()]]
            MDTabbedPanel:
                id: tab_panel
                tab_display_mode:'text'
                TabWorker:
                    name: 'new'
                    text: 'New (+)'

<ScreenWorker>:
    ScrollView:
        id: scroll_worker
        pos_hint: {"center_x": .5, "center_y": .5}

<TabWorker>
    ScreenManager:
        id: scr_mngr_mode
        Screen:
            name: 'work'
            NavigationLayout:
                id: nav_layout
                side_panel_positioning: "right"
                _anim_direction: -1
                MDNavigationDrawer:
                    id: nav_drawer
                    NavigationDrawerToolbar:
                        title: "Navigation Drawer"
                ScreenManager:
                    id: scr_mngr
                    Screen:
                        name: 'newsearch'
                        ScrollView:
                            FloatLayout:
                                BoxLayout:
                                    id: box1
                                    size: root.size
                                    canvas.before:
                                        Color:
                                            rgba: 1, 0, 0, 0
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                    orientation:
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                    #padding: dp(48)
                                    spacing: 10
                                    #size_hint_x: .9
                                    size_hint_y: 1
        Screen:
            name: 'progress'
            MDCheckbox:
                id:            chkbox
                size_hint:    None, None
                size:        dp(48), dp(48)
                pos_hint:    {'center_x': 0.5, 'center_y': 0.4}
                active: True
            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                active: True if chkbox.active else False


<NumPad>:
    size: root.size
    pos: root.pos
    orientation: 'vertical'
    padding: 10
    MDTextField:
        hint_text: "Number"
        size_hint_y: .1
        text: root.display_text + root.units if root.units != None else root.display_text
        #theme: ('blue', 'variant_2')
        #halign: 'right'
        font_size: self.height * .5
    GridLayout:
        cols:3
        size_hint_y: .8
        padding: 5
        spacing: 5
        MDRaisedButton:
            text: "1"
            size_hint: (.33,.25)
            on_release: root.button_callback("1")
        MDRaisedButton:
            text: "2"
            size_hint: (.33,.25)
            on_release: root.button_callback("2")
        MDRaisedButton:
            text: "3"
            size_hint: (.33,.25)
            on_release: root.button_callback("3")
        MDRaisedButton:
            text: "4"
            size_hint: (.33,.25)
            on_release: root.button_callback("4")
        MDRaisedButton:
            text: "5"
            size_hint: (.33,.25)
            on_release: root.button_callback("5")
        MDRaisedButton:
            text: "6"
            size_hint: (.33,.25)
            on_release: root.button_callback("6")
        MDRaisedButton:
            text: "7"
            size_hint: (.33,.25)
            on_release: root.button_callback("7")
        MDRaisedButton:
            text: "8"
            size_hint: (.33,.25)
            on_release: root.button_callback("8")
        MDRaisedButton:
            text: "9"
            size_hint: (.33,.25)
            on_release: root.button_callback("9")
        MDRaisedButton:
            text: "del"
            size_hint: (.33,.25)
            on_release: root.button_callback("del")
        MDRaisedButton:
            text: "0"
